<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/navToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:titleTextColor="@color/colorPrimary" />

    <ImageButton
        android:id="@+id/item_map"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="4dp"
        android:background="@color/colorAccent"
        android:src="@android:drawable/ic_menu_mapmode"
        android:title="menu_list"
        app:layout_constraintBottom_toBottomOf="@id/navToolBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_home"
        app:layout_constraintVertical_bias="0.0"
        app:showAsAction="always" />

    <ImageButton
        android:id="@+id/item_home"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="112dp"
        android:layout_marginBottom="4dp"
        android:background="@color/colorAccent"
        android:src="@android:drawable/ic_menu_myplaces"
        android:title="menu_home"
        app:layout_constraintBottom_toBottomOf="@id/navToolBar"
        app:layout_constraintStart_toEndOf="@+id/item_map"
        app:layout_constraintTop_toTopOf="@+id/item_settings"
        app:layout_constraintVertical_bias="0.0"
        app:showAsAction="always" />

    <ImageButton
        android:id="@+id/item_settings"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="16dp"
        android:background="@color/colorAccent"
        android:src="@android:drawable/ic_menu_preferences"
        android:title="menu_settings"
        app:layout_constraintBottom_toBottomOf="@id/navToolBar"
        app:layout_constraintEnd_toEndOf="@+id/navToolBar"
        app:layout_constraintTop_toTopOf="@+id/navToolBar"
        app:layout_constraintVertical_bias="1.0"
        app:showAsAction="always" />

</androidx.constraintlayout.widget.ConstraintLayout>